{
  "name": "electron-svelte-ts-template",
  "version": "1.0.0",
  "description": "Electron Desktop App Template with Svelte and TypeScript",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist-electron/main.js",
    "dev:renderer": "vite",
    "start": "electron dist-electron/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "lint": "eslint src --ext ts,svelte --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src/**/*.{ts,svelte}"
  },
  "keywords": ["electron", "svelte", "typescript", "desktop"],
  "author": "Codiner",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "electron": "^40.4.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.1.1",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.3",
    "svelte-preprocess": "^5.1.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.codiner.electron-svelte-ts",
    "productName": "Electron Svelte Template",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
